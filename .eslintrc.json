{
  "env": {
      "browser": true,
      "node":true,
      "es6": true 
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
			
  },

  "rules": {
    "no-unused-vars":"off",
    "arrow-parens": "off",
      "indent": [
          "error",
          4
      ],
      "linebreak-style": [
          "off",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ]
  }
}
